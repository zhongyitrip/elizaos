{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "lib": [
            "ESNext"
        ],
        "moduleResolution": "Bundler",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": false,
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "noImplicitAny": false,
        "allowJs": true,
        "checkJs": false,
        "moduleDetection": "force",
        "baseUrl": ".",
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": [
        "src/**/*.ts",
        "scripts/**/*.ts",
        "__tests__/**/*.ts"
    ]
}